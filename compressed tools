    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tab functionality
            const tabBtns = document.querySelectorAll('.tab-btn');
            const tabContents = document.querySelectorAll('.tab-content');
            
            tabBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    // Remove active class from all buttons and contents
                    tabBtns.forEach(b => b.classList.remove('active'));
                    tabContents.forEach(c => c.classList.remove('active'));
                    
                    // Add active class to clicked button and corresponding content
                    btn.classList.add('active');
                    const tabId = btn.getAttribute('data-tab');
                    document.getElementById(`${tabId}-tab`).classList.add('active');
                });
            });
            
            // Image compression functionality
            setupImageCompression();
            
            // PDF compression functionality
            setupPdfCompression();
            
            // Word compression functionality
            setupWordCompression();
            
            // Excel compression functionality
            setupExcelCompression();
            
            // Results functionality
            let compressedFiles = [];
            
            document.getElementById('downloadAllBtn').addEventListener('click', () => {
                compressedFiles.forEach(file => {
                    const a = document.createElement('a');
                    a.href = file.compressedUrl;
                    a.download = file.fileName;
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                });
            });
            
            function setupImageCompression() {
                const uploadArea = document.getElementById('imagesUploadArea');
                const fileInput = document.getElementById('imagesFileInput');
                const qualitySlider = document.getElementById('imageQualitySlider');
                const qualityValue = document.getElementById('imageQualityValue');
                const resizeSlider = document.getElementById('imageResizeSlider');
                const resizeValue = document.getElementById('imageResizeValue');
                const compressBtn = document.getElementById('compressImagesBtn');
                const resetBtn = document.getElementById('resetImagesBtn');
                
                qualitySlider.addEventListener('input', () => {
                    qualityValue.textContent = `${qualitySlider.value}%`;
                });
                
                resizeSlider.addEventListener('input', () => {
                    resizeValue.textContent = `${resizeSlider.value}%`;
                });
                
                uploadArea.addEventListener('click', () => fileInput.click());
                uploadArea.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    uploadArea.classList.add('active');
                });
                uploadArea.addEventListener('dragleave', () => {
                    uploadArea.classList.remove('active');
                });
                uploadArea.addEventListener('drop', (e) => {
                    e.preventDefault();
                    uploadArea.classList.remove('active');
                    if (e.dataTransfer.files.length > 0) {
                        fileInput.files = e.dataTransfer.files;
                        handleImageFiles();
                    }
                });
                
                fileInput.addEventListener('change', handleImageFiles);
                
                compressBtn.addEventListener('click', compressImageFiles);
                resetBtn.addEventListener('click', resetImageTool);
                
                function handleImageFiles() {
                    if (fileInput.files.length > 0) {
                        compressBtn.disabled = false;
                        uploadArea.innerHTML = `
                            <div class="upload-icon">✅</div>
                            <h2>${fileInput.files.length} ${fileInput.files.length === 1 ? 'Image' : 'Images'} Selected</h2>
                            <p>Ready to compress</p>
                        `;
                    }
                }
                
                function compressImageFiles() {
                    if (!fileInput.files || fileInput.files.length === 0) return;
                    
                    compressBtn.disabled = true;
                    compressBtn.textContent = 'Compressing...';
                    document.getElementById('compressionProgress').style.width = '0%';
                    compressedFiles = [];
                    document.getElementById('resultsBody').innerHTML = '';
                    document.getElementById('resultsSection').style.display = 'block';
                    
                    const files = Array.from(fileInput.files);
                    const totalFiles = files.length;
                    let processedFiles = 0;
                    
                    files.forEach((file, index) => {
                        const reader = new FileReader();
                        
                        reader.onload = function(e) {
                            const img = new Image();
                            img.onload = function() {
                                // Create canvas for compression
                                const canvas = document.createElement('canvas');
                                const ctx = canvas.getContext('2d');
                                
                                // Calculate new dimensions based on resize percentage
                                const resizePercentage = parseInt(resizeSlider.value) / 100;
                                const newWidth = img.width * resizePercentage;
                                const newHeight = img.height * resizePercentage;
                                
                                canvas.width = newWidth;
                                canvas.height = newHeight;
                                
                                // Draw image with new dimensions
                                ctx.drawImage(img, 0, 0, newWidth, newHeight);
                                
                                // Get output format
                                const outputFormat = document.querySelector('input[name="imageOutputFormat"]:checked').value;
                                let mimeType = file.type;
                                let fileExtension = file.name.split('.').pop().toLowerCase();
                                
                                if (outputFormat !== 'original') {
                                    switch(outputFormat) {
                                        case 'jpg':
                                            mimeType = 'image/jpeg';
                                            fileExtension = 'jpg';
                                            break;
                                        case 'png':
                                            mimeType = 'image/png';
                                            fileExtension = 'png';
                                            break;
                                        case 'webp':
                                            mimeType = 'image/webp';
                                            fileExtension = 'webp';
                                            break;
                                    }
                                }
                                
                                // Quality setting (only applies to JPG and WebP)
                                let quality = parseInt(qualitySlider.value) / 100;
                                if (mimeType === 'image/png') {
                                    quality = undefined;
                                }
                                
                                // Compress image
                                canvas.toBlob((blob) => {
                                    const compressedUrl = URL.createObjectURL(blob);
                                    const originalSize = file.size;
                                    const compressedSize = blob.size;
                                    const reductionPercentage = ((originalSize - compressedSize) / originalSize * 100).toFixed(2);
                                    
                                    // Add to results
                                    compressedFiles.push({
                                        originalUrl: URL.createObjectURL(file),
                                        compressedUrl: compressedUrl,
                                        fileName: file.name.replace(/\.[^/.]+$/, '') + '_compressed.' + fileExtension,
                                        originalSize: formatFileSize(originalSize),
                                        compressedSize: formatFileSize(compressedSize),
                                        reduction: reductionPercentage
                                    });
                                    
                                    // Update results table
                                    const row = document.createElement('tr');
                                    row.innerHTML = `
                                        <td>${file.name}</td>
                                        <td>${formatFileSize(originalSize)}</td>
                                        <td>${formatFileSize(compressedSize)}</td>
                                        <td>${reductionPercentage}%</td>
                                        <td><button class="download-btn" data-index="${index}">Download</button></td>
                                    `;
                                    document.getElementById('resultsBody').appendChild(row);
                                    
                                    // Add event listener to download button
                                    row.querySelector('button').addEventListener('click', () => {
                                        const a = document.createElement('a');
                                        a.href = compressedUrl;
                                        a.download = file.name.replace(/\.[^/.]+$/, '') + '_compressed.' + fileExtension;
                                        document.body.appendChild(a);
                                        a.click();
                                        document.body.removeChild(a);
                                    });
                                    
                                    // Update progress
                                    processedFiles++;
                                    const progress = (processedFiles / totalFiles) * 100;
                                    document.getElementById('compressionProgress').style.width = `${progress}%`;
                                    
                                    // When all files are processed
                                    if (processedFiles === totalFiles) {
                                        compressBtn.disabled = false;
                                        compressBtn.textContent = 'Compress Images';
                                    }
                                }, mimeType, quality);
                            };
                            
                            img.src = e.target.result;
                        };
                        
                        reader.readAsDataURL(file);
                    });
                }
                
                function resetImageTool() {
                    fileInput.value = '';
                    compressBtn.disabled = true;
                    compressBtn.textContent = 'Compress Images';
                    uploadArea.innerHTML = `
                        <div class="upload-icon">📁</div>
                        <h2>Drag & Drop Your Images Here</h2>
                        <p>or click to browse files (JPG, PNG, GIF, WebP)</p>
                    `;
                }
            }
            
            function setupPdfCompression() {
                const uploadArea = document.getElementById('pdfsUploadArea');
                const fileInput = document.getElementById('pdfsFileInput');
                const compressionSlider = document.getElementById('pdfCompressionSlider');
                const compressionValue = document.getElementById('pdfCompressionValue');
                const compressBtn = document.getElementById('compressPdfsBtn');
                const resetBtn = document.getElementById('resetPdfsBtn');
                
                const compressionLevels = ['Low', 'Medium', 'High'];
                
                compressionSlider.addEventListener('input', () => {
                    compressionValue.textContent = compressionLevels[compressionSlider.value - 1];
                });
                
                uploadArea.addEventListener('click', () => fileInput.click());
                uploadArea.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    uploadArea.classList.add('active');
                });
                uploadArea.addEventListener('dragleave', () => {
                    uploadArea.classList.remove('active');
                });
                uploadArea.addEventListener('drop', (e) => {
                    e.preventDefault();
                    uploadArea.classList.remove('active');
                    if (e.dataTransfer.files.length > 0) {
                        fileInput.files = e.dataTransfer.files;
                        handlePdfFiles();
                    }
                });
                
                fileInput.addEventListener('change', handlePdfFiles);
                
                compressBtn.addEventListener('click', compressPdfFiles);
                resetBtn.addEventListener('click', resetPdfTool);
                
                function handlePdfFiles() {
                    if (fileInput.files.length
